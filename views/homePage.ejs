    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap");
        @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css');

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        :root {
            --black: #333;
            --yellow: #f3c306;
            --orange: #d78406;
        }

        body {
            font-size: 18px;
            line-height: 1.6;
            color: var(--black);
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Enhanced Header - Navbar complètement refaite */
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            background: linear-gradient(135deg, var(--yellow) 0%, #f1b805 100%);
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            padding: 0;
        }

        header.scrolled {
            background: rgba(243, 195, 6, 0.95);
            box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        }

        .navbar-container {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.6rem 2rem;
            position: relative;
        }

        .logo-container {
            z-index: 1001;
        }

        #logo {
            height: 3rem;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            filter: drop-shadow(0 2px 8px rgba(0,0,0,0.1));
        }

        #logo:hover {
            transform: scale(1.1) rotate(5deg);
            filter: drop-shadow(0 4px 20px rgba(255,215,0,0.4));
        }

        /* Desktop Navigation avec style moderne */
        .desktop-nav {
            display: none;
        }

        .desktop-nav ul {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 0.5rem;
        }

        .desktop-nav a {
            color: var(--black);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            padding: 12px 20px;
            border-radius: 50px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
            background: rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

        .desktop-nav a::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: radial-gradient(circle, rgba(0,0,0,0.1) 0%, transparent 70%);
            border-radius: 50%;
            transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            transform: translate(-50%, -50%);
        }

        .desktop-nav a:hover::before {
            width: 300px;
            height: 300px;
        }

        .desktop-nav a:hover {
            color: white;
            background: var(--black);
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            border-color: var(--black);
        }

        /* Mobile Menu Button avec design moderne */
        .mobile-menu-btn {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 48px;
            height: 48px;
            cursor: pointer;
            border-radius: 12px;
            transition: all 0.3s ease;
            background: rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(0, 0, 0, 0.1);
            z-index: 1001;
        }

        .mobile-menu-btn:hover {
            background: rgba(0, 0, 0, 0.1);
            transform: scale(1.05);
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }

        .hamburger-line {
            width: 20px;
            height: 2px;
            background: var(--black);
            margin: 2px 0;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            border-radius: 2px;
        }

        /* Animation moderne du hamburger */
        .mobile-menu-btn.active .hamburger-line:nth-child(1) {
            transform: rotate(45deg) translateY(6px);
            background: var(--white);
        }

        .mobile-menu-btn.active .hamburger-line:nth-child(2) {
            opacity: 0;
            transform: scale(0);
        }

        .mobile-menu-btn.active .hamburger-line:nth-child(3) {
            transform: rotate(-45deg) translateY(-6px);
            background: var(--white);
        }

        .mobile-menu-btn.active {
            background: rgba(0, 0, 0, 0.9);
            border-color: var(--black);
        }

        /* Mobile Menu Overlay moderne */
        .mobile-menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(8px);
            opacity: 0;
            visibility: hidden;
            transition: all 0.4s ease;
            z-index: 999;
        }

        .mobile-menu-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Mobile Menu avec design glassmorphism */
        .mobile-menu {
            position: fixed;
            top: 0;
            right: -100%;
            width: 85%;
            max-width: 400px;
            height: 100vh;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(25px);
            border-left: 1px solid rgba(255, 255, 255, 0.2);
            padding: 5rem 2rem 2rem;
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            z-index: 1000;
            overflow-y: auto;
        }

        .mobile-menu::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, 
                rgba(255,255,255,0.1) 0%, 
                rgba(255,255,255,0.05) 50%, 
                rgba(255,255,255,0.1) 100%);
            z-index: -1;
        }

        .mobile-menu.active {
            right: 0;
        }

        .mobile-menu ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .mobile-menu li {
            margin-bottom: 1rem;
            opacity: 0;
            transform: translateX(100px) rotateY(45deg);
            transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .mobile-menu.active li {
            opacity: 1;
            transform: translateX(0) rotateY(0deg);
        }

        .mobile-menu.active li:nth-child(1) { transition-delay: 0.1s; }
        .mobile-menu.active li:nth-child(2) { transition-delay: 0.2s; }
        .mobile-menu.active li:nth-child(3) { transition-delay: 0.3s; }
        .mobile-menu.active li:nth-child(4) { transition-delay: 0.4s; }

        .mobile-menu a {
            display: flex;
            align-items: center;
            color: var(--white);
            text-decoration: none;
            font-weight: 500;
            font-size: 1rem;
            padding: 1.2rem 1.5rem;
            border-radius: 16px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 0.8rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }

        .mobile-menu a::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(255,215,0,0.1) 50%, 
                transparent 100%);
            transition: left 0.6s ease;
        }

        .mobile-menu a:hover::before {
            left: 100%;
        }

        .mobile-menu a:hover, 
        .mobile-menu a:active {
            background: rgba(255, 255, 255, 0.15);
            transform: translateX(8px) scale(1.02);
            border-color: rgba(255,215,0,0.5);
            box-shadow: 0 8px 32px rgba(255,215,0,0.2);
        }

        .mobile-menu a::after {
            content: '→';
            opacity: 0;
            transition: all 0.3s ease;
            margin-left: auto;
            font-size: 1.2rem;
        }

        .mobile-menu a:hover::after {
            opacity: 1;
            transform: translateX(5px);
        }

        /* Close button moderne */
        .mobile-menu-close {
            position: absolute;
            top: 2rem;
            right: 2rem;
            width: 44px;
            height: 44px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            color: var(--white);
            font-size: 1.1rem;
            backdrop-filter: blur(10px);
        }

        .mobile-menu-close:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.1) rotate(90deg);
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
            border-color: rgba(255,215,0,0.5);
        }

        /* Responsive Design */
        @media (min-width: 768px) {
            .desktop-nav {
                display: block;
            }
            
            .mobile-menu-btn {
                display: none;
            }
        }

        /* Enhanced Hero Section */
        .company {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 50%, #2c3e50 100%);
            color: white;
            text-align: center;
            padding: 85px 0 60px;
            position: relative;
            overflow: hidden;
        }

        .company::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 50%, rgba(243, 195, 6, 0.1) 0%, transparent 50%),
                        radial-gradient(circle at 80% 20%, rgba(215, 132, 6, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

        .slider {
            width: 100%;
            height: 500px;
            overflow: hidden;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            position: relative;
        }

        figure {
            position: relative;
            left: 0px;
            width: 400%;
            height: 100%;
            animation: 25s slideShow infinite ease-in-out;
        }

        .slide {
            position: relative;
            width: 25%;
            height: 100%;
            float: left;
            overflow: hidden;
        }

        .slide h1 {
            position: absolute;
            font-size: clamp(2rem, 5vw, 4rem);
            width: 100%;
            text-align: center;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: rgb(255, 255, 255);
            text-shadow: 0px 4px 20px rgba(0, 0, 0, 0.8);
            font-weight: 700;
            z-index: 2;
            animation: textGlow 3s ease-in-out infinite alternate;
            pointer-events: none;
        }

        @keyframes textGlow {
            from { text-shadow: 0px 4px 20px rgba(0, 0, 0, 0.8); }
            to { text-shadow: 0px 4px 30px rgba(243, 195, 6, 0.6); }
        }

        .slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 8s ease-in-out;
        }

        .slide:hover img {
            transform: scale(1.1);
        }

        @keyframes slideShow {
            0%, 20% { left: 0; }
            25%, 45% { left: -100%; }
            50%, 70% { left: -200%; }
            75%, 95% { left: -300%; }
            100% { left: 0; }
        }

        /* Enhanced Waves */
        .waves-head {
            position: relative;
            width: 100%;
            height: 100px;
            margin-bottom: -60px;
            overflow: hidden;
        }

        .parallax > use {
            animation: wave-animation 20s cubic-bezier(0.55, 0.5, 0.45, 0.5) infinite;
        }

        .parallax > use:nth-child(1) {
            animation-delay: -2s;
            animation-duration: 7s;
            fill: rgba(255,255,255,0.7);
        }

        .parallax > use:nth-child(2) {
            animation-delay: -3s;
            animation-duration: 10s;
            fill: rgba(255,255,255,0.5);
        }

        .parallax > use:nth-child(3) {
            animation-delay: -4s;
            animation-duration: 13s;
            fill: rgba(255,255,255,0.3);
        }

        .parallax > use:nth-child(4) {
            animation-delay: -5s;
            animation-duration: 20s;
            fill: #fff;
        }

        @keyframes wave-animation {
            0% { transform: translate3d(-90px, 0, 0); }
            100% { transform: translate3d(85px, 0, 0); }
        }

